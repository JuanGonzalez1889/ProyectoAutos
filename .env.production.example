# ============================================
# CONFIGURACIÓN DE PRODUCCIÓN - AutoWeb Pro
# ============================================
# Copiar este archivo a .env y completar con valores reales
# NUNCA commitear este archivo con valores reales a Git

# ============================================
# APPLICATION
# ============================================
APP_NAME="AutoWeb Pro"
APP_ENV=production
APP_KEY=base64:GENERAR_CON_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://autowebpro.com

# ============================================
# LOGGING
# ============================================
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ============================================
# DATABASE
# ============================================
DB_CONNECTION=mysql
DB_HOST=your-production-db-host.com
DB_PORT=3306
DB_DATABASE=autoweb_production
DB_USERNAME=autoweb_user
DB_PASSWORD=STRONG_DATABASE_PASSWORD_HERE

# ============================================
# CACHE & SESSION
# ============================================
BROADCAST_DRIVER=redis
CACHE_DRIVER=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# ============================================
# REDIS
# ============================================
REDIS_HOST=your-redis-host.com
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_PORT=6379

